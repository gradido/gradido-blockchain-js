{
  "name": "gradido-blockchain-js",
  "version": "0.0.1",
  "description": "Gradido Blockchain Library as Native Node Module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "swig": "swig-jse -DGIT_BRANCH=\"%{ // Generated by SWIG on branch `git branch --show-current` `date` %}\" -javascript -typescript -napi -c++ -split -exports '../index.js' -Ideps/gradido_blockchain/src -Ideps/gradido_blockchain/include -o swig/gradido-blockchain-js.cxx -outdir swig src/gradido-blockchain-js.i",
    "build": "cmake-js compile -p $(nproc) --target gradido-blockchain-js",
    "buildify": "prebuildify --napi --runtime napi --target napi@7 --backend cmake-js --parallel $(nproc) --cmake-target gradido-blockchain-js",
    "test": "jest"
  },
  "keywords": [
    "gradido",
    "blockchain",
    "node.js",
    "swig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradido/gradido-blockchain-js.git"
  },
  "binary": {
    "napi_versions": [
      7
    ]
  },
  "cmake-js": {
    "target": "gradido-blockchain-js",
    "runtime": "napi"
  },
  "author": "Dario Rekowski <dario.rekowski@gmx.de>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gradido/gradido-blockchain-js/issues"
  },
  "homepage": "https://github.com/gradido/gradido-blockchain-js#readme",
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.20.0",
    "node-addon-api": "^7.1.1",
    "node-gyp-build": "^4.8.1",
    "prebuildify": "git+https://github.com/einhornimmond/prebuildify#cmake_js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "cmake-js": "^7.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "resolutions": {
    "glob": "^9.0.0"
  }
}
